{
  "kind": "collectionType",
  "collectionName": "mail_template",
  "info": {
    "name": "mail_template"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "template_code": {
      "type": "text"
    },
    "template_name": {
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "content": {
      "type": "text"
    },
    "status": {
      "type": "integer",
      "default": 1
    }
  }
}
