{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "main_content": {
      "type": "richtext",
      "required": true
    },
    "section_1": {
      "type": "richtext"
    },
    "section_2": {
      "type": "richtext"
    },
    "featured_image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "active": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
